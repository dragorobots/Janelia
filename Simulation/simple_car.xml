<mujoco model="simple_car">
  <compiler inertiafromgeom="true" angle="radian"/>
  
  <option gravity="0 0 -9.81" integrator="RK4" timestep="0.001"/>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="512" height="512"/>
    <material name="groundplane" texture="groundplane" texrepeat="1 1" texuniform="true"/>
  </asset>

  <worldbody>
    <light name="top" pos="0 0 1.5"/>
    <geom name="floor" type="plane" size="5 5 0.1" material="groundplane"/>
    
    <body name="chassis" pos="0 0 0.1">
      <joint type="free"/>
      <geom type="box" size="0.1 0.07 0.03" rgba="0.8 0.8 0.8 1" mass="1.5"/>
      
      <body name="front_right_wheel" pos="0.08 -0.08 0">
        <joint name="front_right_hinge" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.035 0.02" quat="0.7071 0 0.7071 0" rgba="0.4 0.4 0.4 1" friction="1.2 0.1 0.1"/>
      </body>
      <body name="front_left_wheel" pos="0.08 0.08 0">
        <joint name="front_left_hinge" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.035 0.02" quat="0.7071 0 0.7071 0" rgba="0.4 0.4 0.4 1" friction="1.2 0.1 0.1"/>
      </body>
      <body name="back_right_wheel" pos="-0.08 -0.08 0">
        <joint name="back_right_hinge" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.035 0.02" quat="0.7071 0 0.7071 0" rgba="0.4 0.4 0.4 1" friction="1.2 0.1 0.1"/>
      </body>
      <body name="back_left_wheel" pos="-0.08 0.08 0">
        <joint name="back_left_hinge" type="hinge" axis="0 1 0"/>
        <geom type="cylinder" size="0.035 0.02" quat="0.7071 0 0.7071 0" rgba="0.4 0.4 0.4 1" friction="1.2 0.1 0.1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="front_right_motor" joint="front_right_hinge" gear="150"/>
    <motor name="front_left_motor"  joint="front_left_hinge"  gear="150"/>
    <motor name="back_right_motor"  joint="back_right_hinge"  gear="150"/>
    <motor name="back_left_motor"   joint="back_left_hinge"   gear="150"/>
  </actuator>
</mujoco>